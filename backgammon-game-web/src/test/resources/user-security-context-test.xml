<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
		
	<bean id="userDao" class="org.moshe.arad.repositories.dao.hibernate.criteria.GameUserHibernateCriteriaDaoImpl" />
	<bean id="hqlDaoImpl" class="org.moshe.arad.repositories.dao.hibernate.hql.GameUserHqlDaoImpl" />
	<bean id="jpaCriteria" class="org.moshe.arad.repositories.dao.jpa.criteria.JpaUserCriteriaDaoImpl" />
	
	<bean class="org.moshe.arad.repositories.UserSecurityRepository" />
	<bean class="org.moshe.arad.services.UserSecurityService"/>
	
	<bean id="gameUser1" class="org.moshe.arad.repositories.entities.GameUser" scope="prototype">
		<constructor-arg name="firstName" value="Moshe"/>
		<constructor-arg name="lastName" value="Arad"/>
		<constructor-arg name="email" value="email1@walla.com"/>
		<constructor-arg name="userName" value="userName1"/>
		<constructor-arg name="password" value="password1"/>
		<constructor-arg name="role" value="ROLE_USER"/>
	</bean>
	
	<bean id="gameUser2" class="org.moshe.arad.repositories.entities.GameUser" scope="prototype">
		<constructor-arg name="firstName" value="Bob"/>
		<constructor-arg name="lastName" value="Scholes"/>
		<constructor-arg name="email" value="email2@walla.com"/>
		<constructor-arg name="userName" value="userName2"/>
		<constructor-arg name="password" value="password2"/>
		<constructor-arg name="role" value="ROLE_USER"/>
	</bean>
	
	<bean id="gameUser3" class="org.moshe.arad.repositories.entities.GameUser" scope="prototype">
		<constructor-arg name="firstName" value="John"/>
		<constructor-arg name="lastName" value="Terry"/>
		<constructor-arg name="email" value="email3@walla.com"/>
		<constructor-arg name="userName" value="userName3"/>
		<constructor-arg name="password" value="password3"/>
		<constructor-arg name="role" value="ROLE_USER"/>
	</bean>
</beans>
