<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-4.1.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean class="org.springframework.security.web.access.expression.DefaultWebSecurityExpressionHandler" />
	<security:http auto-config="true" use-expressions="false">
		<security:form-login login-page="/home" login-processing-url="/home" 
		username-parameter="userNameLogin" password-parameter="passwordLogin"
		default-target-url="/game/"
		authentication-failure-url="/home?error=true" />
		
		<security:logout logout-url="/logout" logout-success-url="/home?logout=true"/>
		<security:intercept-url pattern="/game" access="ROLE_USER"/>
		<security:intercept-url pattern="/game/*" access="ROLE_USER"/>
	</security:http>
	
	<security:authentication-manager>
		<security:authentication-provider>
			<security:user-service>
				<security:user name="user" password="1234" authorities="ROLE_USER"/>
			</security:user-service>
		</security:authentication-provider>
	</security:authentication-manager>
</beans>
