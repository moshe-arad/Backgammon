<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean class="org.moshe.arad.backgammon.Board"/>

<bean id="firstPlayer" class="org.moshe.arad.backgammon.Player">
	<constructor-arg name="id" value="021787221" />
	<constructor-arg name="firstName" value="Moshe" />
	<constructor-arg name="lastName" value="Arad" />
	<constructor-arg name="age" value="33" />
</bean>

<bean id="secondPlayer" class="org.moshe.arad.backgammon.Player">
	<constructor-arg name="id" value="056889933" />
	<constructor-arg name="firstName" value="James" />
	<constructor-arg name="lastName" value="Brown" />
	<constructor-arg name="age" value="67" />
</bean>

<bean id="firstDice" class="org.moshe.arad.backgammon.Dice"></bean>

<bean id="secondDice" class="org.moshe.arad.backgammon.Dice"></bean>

</beans>
