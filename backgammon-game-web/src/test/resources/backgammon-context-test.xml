<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">

	<context:annotation-config />
	<context:component-scan base-package="org.moshe.arad" />
	
	<bean id="firstPlayer" class="org.moshe.arad.game.player.BackgammonPlayer">
		<constructor-arg name="firstName" value="Moshe-test" />
		<constructor-arg name="lastName" value="Arad-test" />
		<constructor-arg name="age" value="13" />
		<constructor-arg name="turn" ref="turn" />
		<constructor-arg name="isWhite" value="true" />
	</bean>

	<bean id="secondPlayer" class="org.moshe.arad.game.player.BackgammonPlayer">
		<qualifier value="secondPlayer" />
		<constructor-arg name="firstName" value="James-test" />
		<constructor-arg name="lastName" value="Brown-test" />
		<constructor-arg name="age" value="12" />
		<constructor-arg name="turn" ><null /></constructor-arg>
		<constructor-arg name="isWhite" value="false" />
	</bean>
	
	<bean id="turn" class="org.moshe.arad.game.turn.BackgammonTurn" factory-method="getInstance" >
		<constructor-arg ref="firstDice"/>
		<constructor-arg ref="secondDice"/>
	</bean>
	
	<bean id="firstDice" class="org.moshe.arad.game.instrument.BackgammonDice" />
	<bean id="secondDice" class="org.moshe.arad.game.instrument.BackgammonDice" />
	<bean class="org.moshe.arad.game.instrument.BlackBackgammonPawn" scope="prototype"/>
	<bean class="org.moshe.arad.game.instrument.WhiteBackgammonPawn" scope="prototype"/>
	<bean class="org.moshe.arad.game.instrument.BackgammonBoard" />
</beans>
